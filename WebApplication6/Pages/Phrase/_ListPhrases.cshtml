@model List<PhraseInput>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <table>
        <thead>
            <tr>
                <th>№</th>
                <th>Phrase</th>
                <th>Translation</th>
                <th>Example of usage</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var phrase in Model)
                {
                    <tr>
                        <td></td>
                        <td>
                            phrase.Statement
                        </td>
                        <td>
                            phrase.Translation
                        </td>
                        <td>
                            phrase.Sentences
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
