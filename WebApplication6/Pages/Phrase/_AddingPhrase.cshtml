@{
}

<div>
    <form asp-page="Phrase/Index" asp-page-handler="Index" method="post">
        <input asp-for="@Model.Id" hidden />
        <div>
            <label asp-for="@Model.Statement"></label>
            <input asp-for="@Model.Statement" />
            <span asp-validation-for="@Model.Statement"></span>
        </div>
        <div>
            <label asp-for="@Model.Translation"></label>
            <input asp-for="@Model.Translation" />
            <span asp-validation-for="@Model.Translation"></span>
        </div>
        <div>
            <label asp-for="@Model.Sentences"></label>
            <input asp-for="@Model.Sentences" />
            <span asp-validation-for="@Model.Sentences"></span>
        </div>
        <button>Send</button>
    </form>
</div>
